\bi
  \item path from the current directory to the file or directory of interest
  \item Relative path to \code{D} from \code{A}: {\hilit \code{B/D}}
  \item Equivalently: {\hilit \code{./B/D}}  (. refers to current directory)
\ei
\eb

\end{frame}

